@model List<OpcoesInscricaoViewModel>

@(Smc.Grid("gridOpcoes", new SMCPagerModel<OpcoesInscricaoViewModel>(Model))
    .AutoGenerateColumns()
    .HideNavigator()
    .HideRowNumber()
    .HideRowsTotalizer()
    .HideGridTitle()
    .GridRowConfiguration((options, item) =>
    {
    var itemParsed = (item as OpcoesInscricaoViewModel);
    if (itemParsed.Opcao == ViewBag.Opcao)
        options.CssClass = "smc-grid-item-destaque";
})
)

