@model CheckinLoteViewModel



@using (Smc.Header("headerCheckinLote", SMCHeaderType.Primary)
                                              .Item(m => m.DescricaoProcesso, sizeMD: SMCSize.Grid12_24, sizeLG: SMCSize.Grid12_24, sizeXS: SMCSize.Grid12_24)
                                              .Item(m => m.DescricaoOferta, sizeMD: SMCSize.Grid12_24, sizeLG: SMCSize.Grid12_24, sizeXS: SMCSize.Grid12_24)
                                              //.Item(m => m.TotalInscritos, sizeMD: SMCSize.Grid8_24, sizeLG: SMCSize.Grid8_24, sizeXS: SMCSize.Grid8_24)
                                              //.Item(m => m.TotalChekinsRealizados, sizeMD: SMCSize.Grid8_24, sizeLG: SMCSize.Grid8_24, sizeXS: SMCSize.Grid8_24)
                                              //.Item(m => m.TotalRestantes, sizeMD: SMCSize.Grid8_24, sizeLG: SMCSize.Grid8_24, sizeXS: SMCSize.Grid8_24)
                                              .Begin())
{ }


@using (Smc.Form("formPesquisaInscritos", "ListarInscritosChekinLote").Ajax("#divGridAcompanhamentoInscritoCheckinLote").Attribute("target", "_blank").Begin())
{
    using (Smc.Fieldset("fieldsetPesquisaInscritosemLote").CssClass("smc-fieldset-filter").Begin())
    {
        @Smc.EditorFor(m => m.SeqInscricao)
        @Smc.EditorFor(m => m.NomeInscrito)
        @Smc.EditorFor(m => m.CheckinRealizado).Required()
        @Smc.HiddenFor(m => m.SeqOferta)

        @(Smc.ButtonSet()

      .AddButton(Smc.Button(SMCButtonBehavior.Pesquisar).DisplayMode(SMCButtonDisplayMode.TextAndIcon).Highlight())
      .AddButton(Smc.Button(SMCButtonBehavior.Limpar).Attribute("data-clear", "#divGridAcompanhamentoInscritoCheckinLote").DisplayMode(SMCButtonDisplayMode.Icon))
  )
    }
}



@using (Smc.Form("formListagemCheckinLote", "ListagemInscritosAtividade").Ajax().Begin())
{
    <div id="divGridAcompanhamentoInscritoCheckinLote">
        @Smc.ActionList("ListarInscritosChekinLote", new { filtro = Model }, initialListingDisabled: true)
    </div>


}


@(Smc.ButtonSet()

      .AddButton(Smc.Button("Voltar", "Index", "AcompanhamentoCheckin").CssClass("smc-btn-voltar-icotext").Type(SMCButtonType.Link))
  )

@section Scripts{
    <script>
        function ReloadPage() {


            $(document).ready(function () {
                $("#ModalFechar_0").click(function () {
                    location.reload();
                });
            });
        }

    </script>
    <script src="@Url.SMCBuscarRecursoAplicacao("Scripts/AnaliseCheckinLote.js")" type="text/javascript"></script>


    @*    <script type="text/javascript" src=@Url.SMCBuscarRecursoAplicacao("Scripts/ReloadPagerAjaxDiv.js")></script>
    *@

    <script src="@Url.SMCBuscarRecursoAplicacao("Scripts/ReloadPagerCheckinEmLote.js")" type="text/javascript"></script>

}