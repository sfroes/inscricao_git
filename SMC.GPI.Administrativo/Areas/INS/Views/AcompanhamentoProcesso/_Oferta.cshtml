@using (Smc.Div().Size(SMCSize.Grid24_24).CssClass("row smc-list-item-agrupado").Begin())
{
using (Smc.Div().Size(SMCSize.Grid23_24).Begin())
{
    @Smc.DisplayFor(prop => prop.Descricao)
    @Smc.DisplayFor(prop => prop.Total)
    @Smc.DisplayFor(prop => prop.Iniciadas)
    @Smc.DisplayFor(prop => prop.Finalizadas)
    @Smc.DisplayFor(prop => prop.Pagas)
    @Smc.DisplayFor(prop => prop.DocumentacoesEntregues)
    @Smc.DisplayFor(prop => prop.Confirmadas)
    @Smc.DisplayFor(prop => prop.NaoConfirmadas)
    @Smc.DisplayFor(prop => prop.Deferidos)
    @Smc.DisplayFor(prop => prop.Indeferidos)
