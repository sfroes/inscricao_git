@using StackExchange.Profiling;
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <title>@Smc.GetUIResource("SiglaAplicacao") - @Smc.RenderTitle()</title>
    <meta charset="utf-8" />
    <meta http-equiv="content-language" content="pt-br" />
    <meta http-equiv="content-type" content="text/html; charset=UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1">
    <meta name="accept-language" content="pt-br">
    <meta name="author" content="GTI - Gerência de Tecnologia da Informação">
    <meta name="copyright" content="© 2024 GTI" />
    <meta name="description" content="Sistema de Gestão de Inscrições">
    <meta name="keywords" content="Sistema de Gestão de Inscrições" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="manifest" href="~/manifest.json">

    <link href="@Url.SMCBuscarRecursoAplicacao("GPI/Css/smc-recursos.min.css")" rel="stylesheet" />

    @Html.SMCGoogleAnalyticsTagManagerHead()

    <!-- FA 6 -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/solid.min.css" integrity="sha512-pZlKGs7nEqF4zoG0egeK167l6yovsuL8ap30d07kA5AJUq+WysFlQ02DLXAmN3n0+H3JVz5ni8SJZnrOaYXWBA==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <!-- FONT HEEBO -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Heebo:wght@300&display=swap" rel="stylesheet">
</head>
<body>
    @Html.SMCGoogleAnalyticsTagManagerBody()

    @*-- componente noscript --*@
    @Html.SMCNoScriptWarning()
    <header class="smc-ribbon">
        <a href="@Url.Action("Index", "Home", new { area = string.Empty })" class="smc-aplicaco-logotipo"></a>
        @*-- Área do usuário e nome da instituição--*@
        @using (Smc.Div("divAreaUsuario").CssClass("smc-gpi-usuario").Begin())
        {
            @*-- Área do usuário*@
            <ul class="nav navbar-nav">
                @*-- Usuário --*@
                @(Smc.UserProfileWindow().Buttons(b => b.ShowProfile().ChangePassword() .Logout()))
            </ul>
        }
    </header>
    <section class="smc-conteudo-centro">
        @Smc.MessagePlaceholder(SMCMessagePlaceholders.Default).CssClass("smc-mensagens-principal")
        @*-- componente de navegação entre páginas --*@
        @Smc.NavigationGroup()
        @*-- corpo da página (obrigatório) --*@
        @RenderBody()
    </section>
    @*--(obrigatório) uso obrigatório do logotipo da GTI e Copyright--*@
    <footer class="smc-footer">
        <div class="smc-footer-logo-gti" title="@Smc.GetUIResource("Layout_Titulo_Logotipo_GTI")"></div>
        <div class="smc-footer-logo-smc" title="@Smc.GetUIResource("Layout_Titulo_Logotipo_SMC")"></div>
        <div class="smc-footer-conteudo container">
            &copy;
            <script>document.write(new Date().getFullYear())</script>
        </div>
    </footer>
    @using (Smc.Div("divAlertaProcessando").CssClass("smc-alerta-processando").Begin())
    {
        <i class="fa fa-spinner fa-pulse fa-3x fa-fw"></i>
        <p>@Smc.GetUIResource("Layout_Texto_Aguarde")</p>
    }

    @Html.SMCRegisterBundleScripts()

    @*-- Section para renderização de scrits das views (obrigatório)--*@
    @if (IsSectionDefined("Scripts"))
    {
        @RenderSection("Scripts")
    }

    <script>
        function pegarDataAtual() {
            data = new Date();
            document.getElementById('data').value = data.getDay() + '/' + data.getMonth() + '/' + data.getFullYear();
        }
    </script>
    @MiniProfiler.Current.RenderIncludes()

    <!-- Service Worker -->
    <!--<script type="text/javascript" src="~/app.js"></script>-->
</body>
</html>